{
	"name": "egret-helper",
	"displayName": "egret-helper",
	"description": "egret tool",
	"version": "0.0.3",
	"engines": {
		"vscode": "^1.45.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"workspaceContains:**/egretProperties.json"
	],
	"main": "./out/extension.js",
	"publisher": "zt5",
	"repository": "https://github.com/zt5/egret-helper",
	"contributes": {
		"commands": [
			{
				"command": "egret-helper.goToExml",
				"title": "从当前文件中搜索exml并跳转到对应文件"
			},
			{
				"command": "egret-helper.egretRestart",
				"title": "重新运行egret服务器"
			},
			{
				"command": "egret-helper.egretRestartAndDebug",
				"title": "重新运行egret服务器并调试"
			},
			{
				"command": "egret-helper.egretBuild",
				"title": "重新编译项目"
			},
			{
				"command": "egret-helper.egretBuildAndDebug",
				"title": "重新编译项目并调试"
			},
			{
				"command": "egret-helper.egretResSync",
				"title": "同步default.res.json"
			},
			{
				"command": "egret-helper.barClick",
				"title": "点击egret StatusBar"
			}
		],
		"configuration": {
			"type": "object",
			"title": "egret-helper",
			"properties": {
				"egret-helper.enable": {
					"type": "boolean",
					"default": true,
					"description": "插件是否可用"
				},
				"egret-helper.devlog": {
					"type": "boolean",
					"default": false,
					"description": "是否打印详细日志"
				},
				"egret-helper.resWatchIgnore": {
					"type": "array",
					"default": [
						"default.res.json",
						"default.thm.json",
						".exml"
					],
					"description": "default.res.json监测忽略的资源"
				},
				"egret-helper.resWatch": {
					"type": "object",
					"default": {
						".png": {
							"tail": "_png",
							"type": "image"
						},
						".mp3": {
							"tail": "_mp3",
							"type": "sound"
						},
						".jpg": {
							"tail": "_jpg",
							"type": "image"
						},
						".jpeg": {
							"tail": "_jpg",
							"type": "image"
						},
						".tmx": {
							"tail": "_tmx",
							"type": "text"
						},
						".json": {
							"tail": "_json",
							"type": "json"
						},
						".fnt": {
							"tail": "_fnt",
							"type": "font"
						},
						".dbbin": {
							"tail": "_dbbin",
							"type": "bin"
						},
						".ttf": {
							"tail": "_bin",
							"type": "bin"
						},
						".zip": {
							"tail": "_bin",
							"type": "bin"
						}
					},
					"description": "字段名：default.res.json监测的资源 tail：扩展名替换的尾巴(egret资源的名字) type：default.res.json中的type"
				}
			}
		},
		"keybindings": [
			{
				"command": "egret-helper.goToExml",
				"key": "Alt+F1",
				"mac": "Alt+F1",
				"when": "editorTextFocus"
			}
		]
	},
	"scripts": {
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"package": "vsce package"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.12.0",
		"@types/vscode": "^1.45.0",
		"@typescript-eslint/eslint-plugin": "^3.0.2",
		"@typescript-eslint/parser": "^3.0.2",
		"eslint": "^7.1.0",
		"glob": "^7.1.6",
		"mocha": "^7.0.1",
		"typescript": "^4.0.2",
		"vsce": "^1.79.5"
	},
	"dependencies": {
		"tree-kill": "^1.2.2"
	}
}
